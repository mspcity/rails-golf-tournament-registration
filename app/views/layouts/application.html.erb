  <body>
  <nav>
     <div class = "light-green lighten-2">
          <%= link_to "Home", root_path %>
          <%= link_to "Tournament", tournaments_path %>
          <% unless logged_in? %>
              <%= link_to "Signup", signup_path %>
              <%= link_to "Login", login_path %>

          <% else %>
              <%= link_to "My Pofile", user_path(current_user) %>
              <%= link_to "My Registration", user_registers_path(current_user) %>
              <%= link_to "All Registration", registers_path %>
              <%= link_to "Register Tournament", new_user_register_path(current_user) %>
              <%= link_to "Logout", logout_path, method: :delete %>

        
          <% end %>
      </div>
  </nav>
