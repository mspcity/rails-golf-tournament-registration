<style>
    .form{
         width: 500px;
        border: 2px solid green;
    }
</style>
<div class="form">
<p><strong><u>Registration Form</u></strong></p>
<%= form_for(@register) do |f| %>

<%= render partial: "layouts/errors", locals: {object: @register} %> 
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :email %>
<%= f.text_field :email, placeholder: "email@something.com" %><br>

<%= f.label :phone %>
<%= f.text_field :phone, placeholder: "222-222-2222"%><br>

<%= f.label :age %>
<%= f.text_field :age %><br>

<%= f.label :gender %>
<%= f.text_field :gender, placeholder: "male or female" %><br>

<br>

<%= f.label :handicap_category %><br>
0 to 5<%= f.radio_button :handicap_category, '0 to 5'%><br>
6 to 12<%= f.radio_button :handicap_category, '6 to 12' %><br>
13 to 20<%= f.radio_button :handicap_category, '13 to 20' %><br>
21 to 28<%= f.radio_button :handicap_category, '21 to 28' %><br>
29 to 36<%= f.radio_button :handicap_category, '29 to 36' %><br>
above 36<%= f.radio_button :handicap_category, 'above 36' %><br>

Select Tournament: <%= f.collection_select :tournament_id, Tournament.all, :id, :name %>
<br>

<%= f.submit %>
<% end %>
<br>
</div>